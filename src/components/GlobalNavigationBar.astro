---
import "@/styles/global.css";
import { MenuIcon, MoonIcon, SearchIcon, SunIcon } from "astro-feather";
---

<header>
  <div class="p-4 flex items-center justify-between">
    <h1>
      <a href="/" class="text-2xl text-foreground-accent-dark">TikiTakiTo</a>
    </h1>

    <nav>
      <ul class="hidden sm:flex sm:gap-8 text-foreground">
        <li>
          <a href="/posts">Posts</a>
        </li>
        <li>
          <a href="/about">About</a>
        </li>
        <li class="size-6">
          <button>
            <SearchIcon />
          </button>
        </li>
        <li class="relative size-6">
          <button id="theme-btn">
            <MoonIcon
              customClasses="absolute top-[50%] left-[50%] -translate-[50%] scale-100 rotate-0 dark:scale-0 transition-all"
            />
            <SunIcon
              customClasses="absolute top-[50%] left-[50%] -translate-[50%] scale-0 rotate-90 dark:scale-100 transition-all"
            />
          </button>
        </li>
      </ul>
      <div class="block sm:hidden text-foreground">
        <MenuIcon />
      </div>
    </nav>
  </div>
  <div class="px-4">
    <hr class="border-border" />
  </div>
</header>
